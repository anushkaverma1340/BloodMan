<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Title -->
    <title>Bleed For Good</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/public/favicon/favicon.ico">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300&family=Titan+One&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- CSS Stylesheets -->
    <link rel="stylesheet" href="public/css/mainpage-styles.css">

  </head>
  <body style="font-family:'Raleway',sans-serif;">

    <!-- section 1 Navbar -->
    <nav class="navbar navbar-expand-lg">
      <div id="section-1" class="container-fluid">
        <a class="navbar-brand logo" style="font-family:'Titan One',cursive;" href="#section-1">bM</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/profile">Profile</a>
            <a class="nav-link" href="/profile/availability">Availability</a>
            <a class="nav-link" href="/profile/donated">Donors</a>
            <a class="nav-link" href="/profile/addDonor">+Donor</a>
            <a class="nav-link" href="/profile/received">Receivers</a>
            <a class="nav-link" href="/profile/addReceiver">+Receiver</a>
            <a class="nav-link" href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>




    <div id="donated-container" class="container no-gutters" style="--bs-gutter-x:0;">
      <div class="row g-0" style="text-align:center;">




        <% user.donatedBy.forEach(function(donor){ %>
          <div style="margin:10px; --bs-card-border-width:2px;" class="col-md-12 card">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><span style="font-weight:900;">Donor Name:</span> <%=donor.donorName%></li>
              <li class="list-group-item"><span style="font-weight:900;">Donor Contact Number:</span> <%=donor.donorContactNumber%></li>
              <li class="list-group-item"><span style="font-weight:900;">Donor Email:</span> <%=donor.donorEmail%></li>
              <li class="list-group-item"><span style="font-weight:900;">Donor Address:</span> <%=donor.donorAddress%></li>
              <li class="list-group-item"><span style="font-weight:900;">Donor Blood Group:</span> <%=donor.donorBloodGroup%></li>
              <li class="list-group-item"><span style="font-weight:900;">Donation Date:</span> <%=donor.date%></li>
            </ul>
        </div>
        <%})%>


        
      </div>
    </div>

    <div style="text-align: center; margin: 20px;" >
      <a class="btn btn-danger" href="/profile/addDonor">Add Donation</a>
    </div>

 </body>
</html>