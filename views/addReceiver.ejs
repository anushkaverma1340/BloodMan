<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Title -->
    <title>BloodMan</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/public/favicon/favicon.ico">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300&family=Titan+One&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- CSS Stylesheets -->
    <link rel="stylesheet" href="public/css/mainpage-styles.css">

  </head>
  <body style="font-family:'Raleway',sans-serif;">

    <!-- section 1 Navbar -->
    <nav class="navbar navbar-expand-lg">
      <div id="section-1" class="container-fluid">
        <a class="navbar-brand logo" style="font-family:'Titan One',cursive;" href="#section-1">bM</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/profile">Profile</a>
            <a class="nav-link" href="/profile/availability">Availability</a>
            <a class="nav-link" href="/profile/donated">Donors</a>
            <a class="nav-link" href="/profile/addDonor">+Donor</a>
            <a class="nav-link" href="/profile/received">Receivers</a>
            <a class="nav-link" href="/profile/addReceiver">+Receiver</a>
            <a class="nav-link" href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">Add Receiver</h1>
          <form action="/profile/addReceiver" method="POST">

            
            <div class="form-group" style="margin:10px;">
              <input
                type="name"
                id="receiverName"
                name="receiverName"
                class="form-control"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group" style="margin:10px;">
              <input
                type="number"
                id="receiverContactNumber"
                name="receiverContactNumber"
                class="form-control"
                placeholder="Enter contact number"
                required
              />
            </div>
            <div class="form-group" style="margin:10px;">
                <input
                  type="text"
                  id="receiverEmail"
                  name="receiverEmail"
                  class="form-control"
                  placeholder="Enter email"
                  required
                />
            </div>
            <div class="form-group" style="margin:10px;">
              <input
                type="text"
                id="receiverAddress"
                name="receiverAddress"
                class="form-control"
                placeholder="Enter address"
                required
              />
            </div>
            <div class="form-group" style="margin:10px;">
                <input
                  type="number"
                  id="receivedAmount"
                  name="receivedAmount"
                  class="form-control"
                  placeholder="Enter amount (in Pints)"
                  required
                />
            </div>


            <div class="form-group" style="margin-right:20px;">
                <select class="form-control" name="receiverBloodGroup" style="margin:10px;" required>
                    <option value="" disabled selected hidden>Blood Group</option>
                    <option value="A Positive">A+</option>
                    <option value="A Negative">A-</option>
                    <option value="B Positive">B+</option>
                    <option value="B Negative">B-</option>
                    <option value="AB Positive">AB+</option>
                    <option value="AB Negative">AB-</option>
                    <option value="O Positive">O+</option>
                    <option value="O Negative">O-</option>
                </select>
            </div>
            
            <div style="text-align: center; margin: 20px;">
              <button style="margin:10px; text-align:center;" type="submit" class="btn btn-danger">Add</button>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
